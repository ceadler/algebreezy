<h1>Dashboard</h1>
	<% records = Scratchpad.where(owner_id: current_user.id) %>
	<% records.each do |record| %>
		Title: <%= record.title %>
		<%= link_to 'View scratchpad', '/scratchpad/'+record.id.to_s %> <br>
		<form action="/view_scratchpad" method='POST'>
        	<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        	<label>View scratchpad: <input type="submit" value="view"></label>
    	</form>
	<% end %>